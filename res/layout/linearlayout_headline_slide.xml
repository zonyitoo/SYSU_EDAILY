<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<ViewFlipper 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:id="@+id/viewflipper_headline_slide"
	    android:inAnimation="@anim/slide_r2l"
	    android:outAnimation="@anim/slide_l2r"
	    android:animationCache="true">
	    
	    <ImageView android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:id="@+id/imageview_headline_slide_1"
	        android:adjustViewBounds="true"
	        android:fitsSystemWindows="true"/>
	    
	    <ImageView android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:id="@+id/imageview_headline_slide_2"
	        android:adjustViewBounds="true"
	        android:fitsSystemWindows="true"/>
	    
	    <ImageView android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:id="@+id/imageview_headline_slide_3"
	        android:adjustViewBounds="true"
	        android:fitsSystemWindows="true"/>
	</ViewFlipper>
	
	<RelativeLayout android:layout_width="match_parent"
	    android:layout_height="170dp">
	    <TextView android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:text="TEXTTEXT TEXT"
	    	android:id="@+id/textview_headline_slide"
	    	android:textSize="15dp"
	    	android:background="#44ffffff"
	    	android:layout_alignParentBottom="true"/>
	    
	</RelativeLayout>
	
</FrameLayout>